<!DOCTYPE html>
<html>
<head>
  <title>Touple</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div id="title">
		<h1>Touple</h1>
	
	<% if current_user %>
		<ul id="user_panel">
			<li><%= link_to current_user.email, current_user %></li>
			<li><%= link_to "Log Out", "/sessions/delete", method: "delete" %></li>
		</ul>
  <% end %>
  </div>
  
<%= yield %>

</body>
</html>
